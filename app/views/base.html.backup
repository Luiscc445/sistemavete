<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="Sistema de Gestión Veterinaria" />
    <meta name="author" content="Luis Carlos Flores Díaz" />

    <title>{% block title %}{{ app_name }}{% endblock %}</title>

    <link href="{{ url_for('static', filename='css/styles.css') }}" rel="stylesheet" />

    <!-- Modern Admin Styles -->
    {% if current_user.is_authenticated and current_user.is_admin() %}
    <link href="{{ url_for('static', filename='css/admin.css') }}" rel="stylesheet" />
    {% endif %}

    <!-- Responsive Styles for Mobile -->
    <link href="{{ url_for('static', filename='css/responsive.css') }}?v=2" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">

    <style>
        /* CRITICAL MOBILE STYLES - Inline to avoid cache issues */
        @media (max-width: 991.98px) {

            /* Hide sidebar by default on mobile */
            #layoutSidenav #layoutSidenav_nav {
                transform: translateX(-100%) !important;
                transition: transform 0.3s ease-in-out;
                position: fixed;
                top: 0;
                left: 0;
                bottom: 0;
                z-index: 1040;
                width: 280px;
            }

            /* Show sidebar when toggled */
            body.sb-sidenav-toggled #layoutSidenav #layoutSidenav_nav {
                transform: translateX(0) !important;
                box-shadow: 2px 0 10px rgba(0, 0, 0, 0.15);
            }

            /* Full width content on mobile */
            #layoutSidenav #layoutSidenav_content {
                width: 100% !important;
                margin-left: 0 !important;
            }

            /* Make hamburger button visible and larger */
            .sb-topnav #sidebarToggle {
                font-size: 1.5rem !important;
                padding: 0.5rem !important;
                margin-left: 0.5rem !important;
                color: #fff !important;
                display: inline-block !important;
            }
        }

        /* Overlay */
        .sidebar-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 1039;
            opacity: 0;
            transition: opacity 0.3s ease;
            pointer-events: none;
        }

        .sidebar-overlay[style*="display: block"] {
            opacity: 1;
            pointer-events: all;
        }
    </style>

    {% block extra_css %}{% endblock %}
</head>

<body class="sb-nav-fixed">

    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="/">
            <i class="bi bi-paw-fill me-2"></i>{{ app_name }}
        </a>

        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle" href="#!"><i
                class="bi bi-list"></i></button>

        <div class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
        </div>

        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            {% if current_user.is_authenticated %}
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown"
                    aria-expanded="false">
                    <i class="bi bi-person-circle me-1"></i>
                    {{ current_user.nombre_completo }}
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    <li><a class="dropdown-item" href="#!">Mi Perfil (Próximamente)</a></li>
                    <li>
                        <a class="dropdown-item disabled" href="#!">Notificaciones (Próximamente)</a>
                    </li>
                    <li>
                        <hr class="dropdown-divider" />
                    </li>
                    <li><a class="dropdown-item" href="{{ url_for('auth.logout') }}">Cerrar Sesión</a></li>
                </ul>
            </li>
            {% else %}
            <li class="nav-item">
                <a class="nav-link" href="{{ url_for('auth.login') }}">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Iniciar Sesión
                </a>
            </li>
            {% endif %}
        </ul>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        {% if current_user.is_authenticated %}
                        <div class="sb-sidenav-menu-heading">Principal</div>
                        <a class="nav-link {% if request.endpoint == current_user.rol + '.dashboard' %}active{% endif %}"
                            href="/{{ current_user.rol }}/dashboard">
                            <div class="sb-nav-link-icon"><i class="bi bi-speedometer2"></i></div>
                            Dashboard
                        </a>

                        {% if current_user.is_admin() %}
                        <div class="sb-sidenav-menu-heading">Gestión</div>
                        <a class="nav-link {% if request.endpoint and 'tutor' in request.endpoint %}active{% endif %}"
                            href="{{ url_for('admin_tutores.lista') }}">
                            <div class="sb-nav-link-icon"><i class="bi bi-people-fill"></i></div>
                            Tutores y Mascotas
                        </a>
                        <a class="nav-link {% if request.endpoint and 'veterinario' in request.endpoint %}active{% endif %}"
                            href="{{ url_for('admin_veterinarios.lista') }}">
                            <div class="sb-nav-link-icon"><i class="bi bi-person-badge-fill"></i></div>
                            Veterinarios
                        </a>
                        <a class="nav-link {% if request.endpoint and 'inventario' in request.endpoint %}active{% endif %}"
                            href="{{ url_for('inventario.lista') }}">
                            <div class="sb-nav-link-icon"><i class="bi bi-box-seam-fill"></i></div>
                            Inventario
                        </a>
                        <a class="nav-link {% if request.endpoint and 'reportes' in request.endpoint %}active{% endif %}"
                            href="{{ url_for('reportes.dashboard') }}">
                            <div class="sb-nav-link-icon"><i class="bi bi-bar-chart-fill"></i></div>
                            Reportes
                        </a>
                        <a class="nav-link {% if request.endpoint and 'pagos' in request.endpoint %}active{% endif %}"
                            href="{{ url_for('pagos.dashboard') }}">
                            <div class="sb-nav-link-icon"><i class="bi bi-cash-coin"></i></div>
                            Pagos
                        </a>

                        {% elif current_user.is_veterinario() %}
                        <div class="sb-sidenav-menu-heading">Médico</div>
                        <a class="nav-link" href="{{ url_for('veterinario.citas_pendientes') }}">
                            <div class="sb-nav-link-icon"><i class="bi bi-calendar-day-fill"></i></div>
                            Citas Pendientes
                        </a>
                        <a class="nav-link" href="{{ url_for('veterinario.mis_citas') }}">
                            <div class="sb-nav-link-icon"><i class="bi bi-calendar3"></i></div>
                            Mis Citas
                        </a>

                        {% elif current_user.is_tutor() %}
                        <div class="sb-sidenav-menu-heading">Mis Datos</div>
                        <a class="nav-link" href="{{ url_for('tutor.mascotas') }}">
                            <div class="sb-nav-link-icon"><i class="bi bi-heart-fill"></i></div>
                            Mis Mascotas
                        </a>
                        <a class="nav-link" href="{{ url_for('tutor.citas') }}">
                            <div class="sb-nav-link-icon"><i class="bi bi-calendar-alt"></i></div>
                            Mis Citas
                        </a>
                        <a class="nav-link" href="{{ url_for('tutor.nueva_cita') }}">
                            <div class="sb-nav-link-icon"><i class="bi bi-calendar-plus-fill"></i></div>
                            Agendar Cita
                        </a>
                        {% endif %}

                        <a class="nav-link" href="{{ url_for('auth.logout') }}">
                            <div class="sb-nav-link-icon"><i class="bi bi-box-arrow-left"></i></div>
                            Cerrar Sesión
                        </a>
                        {% endif %}
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small">Sesión iniciada como:</div>
                    {% if current_user.is_authenticated %}
                    {{ current_user.rol|title }}
                    {% else %}
                    Invitado
                    {% endif %}
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <div class="container-fluid px-4">

                    <h1 class="mt-4">{% block page_title %}Bienvenido{% endblock %}</h1>

                    {% block breadcrumb %}
                    <ol class="breadcrumb mb-4">
                        <li class="breadcrumb-item active">Inicio</li>
                    </ol>
                    {% endblock %}

                    {% with messages = get_flashed_messages(with_categories=true) %}
                    {% if messages %}
                    {% for category, message in messages %}
                    <div class="alert alert-{{ category }} alert-dismissible fade show" role="alert">
                        {% if category == 'success' %}
                        <i class="bi bi-check-circle-fill me-2"></i>
                        {% elif category == 'danger' or category == 'error' %}
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        {% elif category == 'warning' %}
                        <i class="bi bi-exclamation-circle-fill me-2"></i>
                        {% else %}
                        <i class="bi bi-info-circle-fill me-2"></i>
                        {% endif %}
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    {% endfor %}
                    {% endif %}
                    {% endwith %}

                    {% block content %}{% endblock %}

                </div>
            </main>

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">&copy; {{ now.year }} {{ app_name }} v{{ app_version }}</div>
                        <div>
                            <a href="#">Política de Privacidad</a>
                            &middot;
                            <a href="#">Términos &amp; Condiciones</a>
                        </div>
                    </div>

                    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>

                    <script>
                        // Configuración de Toastr (notificaciones bonitas)
                        toastr.options = {
                            "closeButton": true,
                            "progressBar": true,
                            "positionClass": "toast-top-right",
                        };

                        // Inicializar DataTables (para tablas bonitas)
                        $(document).ready(function () {
                            $('.datatable').each(function () {
                                // Solo inicializar DataTables si la tabla tiene al menos una fila de datos válida
                                var $table = $(this);
                                var $rows = $table.find('tbody tr');
                                var hasValidData = false;

                                $rows.each(function () {
                                    // Verificar que la fila tenga el mismo número de celdas que columnas
                                    var cells = $(this).find('td').length;
                                    var headers = $table.find('thead th').length;
                                    if (cells === headers) {
                                        hasValidData = true;
                                        return false; // break
                                    }
                                });

                                if (hasValidData) {
                                    $table.DataTable({
                                        language: {
                                            url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json'
                                        }
                                    });
                                }
                            });
                        });
                    </script>

                    {% block extra_js %}{% endblock %}
</body>

</html>