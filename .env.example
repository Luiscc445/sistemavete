# Configuración de Flask
FLASK_ENV=development
FLASK_CONFIG=development
SECRET_KEY=change-this-to-random-secret-key

# ====================================
# SQLite (Por defecto - Desarrollo)
# ====================================
DATABASE_URL=sqlite:///veterinaria.db

# ====================================
# SQL Server (Para producción)
# ====================================
# Descomenta y configura las siguientes líneas para usar SQL Server

# Opción 1: Variables separadas (recomendado)
# SQLSERVER_DRIVER=ODBC Driver 17 for SQL Server
# SQLSERVER_SERVER=localhost
# SQLSERVER_PORT=1433
# SQLSERVER_DATABASE=veterinaria
# SQLSERVER_USERNAME=sa
# SQLSERVER_PASSWORD=TuPasswordSeguro123!

# Opción 2: Autenticación Windows
# SQLSERVER_DRIVER=ODBC Driver 17 for SQL Server
# SQLSERVER_SERVER=localhost
# SQLSERVER_PORT=1433
# SQLSERVER_DATABASE=veterinaria
# SQLSERVER_TRUSTED=true

# Opción 3: URL directa (alternativa)
# DATABASE_URL=mssql+pyodbc://user:pass@localhost:1433/veterinaria?driver=ODBC+Driver+17+for+SQL+Server

# ====================================
# Configuración de Correo (Opcional)
# ====================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-password-de-aplicacion
MAIL_DEFAULT_SENDER=noreply@veterinaria.com

# ====================================
# Configuración de la Aplicación
# ====================================
APP_NAME=Sistema Veterinario
APP_VERSION=2.0.0

# ====================================
# Configuración de Uploads
# ====================================
MAX_CONTENT_LENGTH=16777216  # 16MB en bytes
